{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@App/*": [
        "./src/*"
      ],
      "@Components/*": [
        "./src/components/*"
      ],
      "@Views/*": [
        "./src/views/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@Utils/*": [
        "./utils/*"
      ],
    }
  },
  "exclude": ["node_modules", "build"]
}
